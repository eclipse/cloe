{
  "version": "4",
  "include": [
    "${CLOE_ROOT}/tests/controller_basic.json"
  ],
  "simulators": [
    {
      "binding": "minimator",
      "args": {
        "vehicles": {
          "ego1": {
            "ego_sensor_mockup": {
              "ego_object": {
                "velocity": 20.0,
                "position": {
                  "x": 0.0,
                  "y": 0.0,
                  "z": 0.0
                }
              }
            },
            "object_sensor_mockup": {
              "objects": [
                {
                  "velocity": 0.0,
                  "position": {
                    "x": 10.0,
                    "y": 0.0,
                    "z": 0.0
                  }
                }
              ]
            }
          }
        }
      }
    }
  ],
  "vehicles": [
    {
      "name": "default",
      "from": {
        "simulator": "minimator",
        "name": "ego1"
      }
    }
  ],
  "server": {
    "listen": false,
    "listen_port": 23456
  },
  "triggers": [
    {"event": "start",   "action": "realtime_factor=-1"},
    {"event": "time=60", "action": "succeed"}
  ]
}
