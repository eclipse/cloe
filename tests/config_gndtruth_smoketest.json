{
    "version": "4",
    "include": [
        "config_minimator_infinite.json"
    ],
    "server": {
        "listen": false,
        "listen_port": 23456
    },
    "triggers": [
        {
            "event": "virtue/failure",
            "action": "fail"
        },
        {
            "event": "start",
            "action": "log=info: Running gndtruth/smoketest."
        },
        {
            "event": "start",
            "action": "realtime_factor=-1"
        },
        {
            "label": "Testcase shall fail if default_speed is => 50.0kph.",
            "event": "default_speed/kmph=>50.0",
            "action": "fail"
        },
        {
            "event": "time=1",
            "action": "succeed"
        }
    ]
}
