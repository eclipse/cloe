{
    "version": "4",
    "include": [
        "config_minimator_infinite.json"
    ],
    "server": {
        "listen": false,
        "listen_port": 23456
    },
    "triggers": [
        {
            "event": "virtue/failure",
            "action": "fail"
        },
        {
            "event": "start",
            "action": "log=info: Running vtd/basic smoketest."
        },
        {
            "event": "start",
            "action": "realtime_factor=-1"
        },
        {
            "label": "Vehicle default should not reach 50 km/h with the vtd binding and basic controller.",
            "event": "default_speed/kmph=>50.0",
            "action": "fail"
        },
        {
            "event": "time=1",
            "action": "succeed"
        }
    ]
}