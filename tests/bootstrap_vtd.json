{
  "version": "4",
  "engine": {
    "hooks": {
      "pre_connect": [
        {
          "path": "../plugins/vtd/bin/vtd",
          "args": [
            "stop"
          ]
        },
        {
          "path": "../plugins/vtd/bin/vtd",
          "args": [
            "start",
            "--vtd-setup", "${THIS_STACKFILE_DIR}/../plugins/vtd/contrib/setups/Cloe.noGUInoIG",
            "--copy-setup",
            "--vtd-project", "${THIS_STACKFILE_DIR}/../plugins/vtd/contrib/projects/cloe_tests"
          ]
        }
      ],
      "post_disconnect": [
        { "path": "../plugins/vtd/bin/vtd", "args": ["stop"] }
      ]
    }
  }
}
