{
  "version": "4",
  "include": [
    "bootstrap_vtd.json",
    "config_vtd_infinite.json",
    "controller_gndtruth.json"
  ],
  "server": {
    "listen": false,
    "listen_port": 23456
  },
  "defaults": {
    "simulators": [
      {
        "binding": "vtd",
        "args": {
          "image_generator": false
        }
      }
    ]
  },
  "triggers": [
    {
      "event": "virtue/failure",
      "action": "fail"
    },
    {
      "event": "start",
      "action": "log=info: Running vtd/basic smoketest."
    },
    {
      "event": "start",
      "action": "realtime_factor=-1"
    },
    {
      "label": "Testcase shall fail if default_speed is => 50.0kph.",
      "event": "default_speed/kmph=>50.0",
      "action": "fail"
    },
    {
      "event": "time=30",
      "action": "succeed"
    }
  ]
}
