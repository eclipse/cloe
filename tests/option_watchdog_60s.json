{
  // Include to enable the watchdog and set the timeout to 60 s.
  // You can do this on the command line:
  //
  //   # cloe-launch shell conanfile_default.py
  //   # cloe-engine run config_nop_smoketest.json option_watchdog_60s.json
  //
  "version": "4",
  "engine": {
    "watchdog": {
      "mode": "kill",
      "default_timeout": 60000
    }
  }
}
